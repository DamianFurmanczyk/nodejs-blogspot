extends layout2

block content
  .container.form--container
    .row
      .col.s12.m10.xl3.offset-m1.offset-xl3.xl6
        .row
        form(action='/editAccount' method='POST')
          .row
            .input-field.col.m10.s12
              input#email.validate(type='email', name='email')
              label(for='email') Email
            .col.m2.s12
              input(type='submit', value='Update').btn
        form(action='/editAccount' method='POST')
          .row
            .input-field.col.m10.s12
              input#username.validate(name='username', type='text')
              label(for='username') username
            .col.m2.s12
              input(type='submit', value='Update').btn
        form(action='/editAccount' method='POST')
          .row
            .input-field.col12
              input#password.validate(name='password', type='password')
              label(for='password') Password
          .row
            .input-field.col10
              input#confirmPassword.validate(type='password', name='confirmPassword')
              label(for='confirmPassword') Confirm password
            .row
              input(type='submit', value='Change password').btn.right
        form(action='/editAccount' method='POST')
          .row
            .col.s12
              p
                input#r1(name='ispublic', value='true', type='radio')
                label(for='r1') Public
              p
                input#r2(name='ispublic', value='false', type='radio')
                label(for='r2') Private
            .row
              input(type='submit', value='Change Privacy').btn.right
              .clearfix
        form(action='/editAccount' method='POST')
          .row
            .input-field.col.s12
              textarea(name='blogDescription')#blogDescription.materialize-textarea
              label(for="blogDescription") Blog description
            .row
              input(type='submit', value='Update description').btn.right
              .clearfix
        form(action='/editAccount' method='POST', style='margin-top: 70px;')
          .row
            input(type='hidden' name='rmAcc' value='true')
            input(type='submit', value='Remove Account').btn.deep-orange.accent-4.align-middle.white-text