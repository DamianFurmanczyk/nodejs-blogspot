mixin regForm()
  .row
    form(action='/register' method='POST').col.s12.m8.l6.offset-m2.offset-l3
      .row
        .input-field.col.s12
          input#fullname.validate(name='fullname', type='text', required)
          label(for='fullname') Full name
      .row
        .input-field.col.s12
          input#password.validate(type='password', required)
          label(for='password') Password
      .row
        .input-field.col.s12
          input#email.validate(type='email', required)
          label(for='email') Email
      .row
        .col12
          p
            input#r1(name='ispublic', value='true', type='radio', required)
            label(for='r1') Public
          p
            input#r2(name='ispublic', value='false', type='radio')
            label(for='r2') Private
      .row
        input(type='submit', value='Sign up').btn.right

