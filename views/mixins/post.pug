mixin post(post = {})
  .row
    div(class=post.fullWidth ? 'col s12' : 'card-column col s12 m10 l8 offset-m1 offset-l2')
      h2.header= post.title
      .card.horizontal
        .card-stacked
          .card-content
            span.small.right= h.moment(post.date).format('MMMM Do YYYY')
            p= post.content
            if  post.tags.length > 0
              .card-action
                each tag in post.tags
                  span= tag