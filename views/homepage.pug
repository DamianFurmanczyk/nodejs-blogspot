extends layout

block content
  #landingBg
    //- jezeli nie zalogowano
    div.landingBg-buttonsContainer
      if !user
        a(href='/register').blue.darken-3.waves-effect.waves-light.btn-large Sign up for free!
        br
        a(href='/login').blue.darken-3.waves-effect.waves-light.btn-large Sing in! (for free)
      else
        a(href='/newPost').blue.darken-3.waves-effect.waves-light.btn-large Add new post
          span.right ✍
        br
        a(href='/browse').blue.darken-3.waves-effect.waves-light.btn-large Browse
        br
        a(href='/logout').blue.darken-3.waves-effect.waves-light.btn-large Log out

block footerContent
  .container
        .row
          .col.l4.offset-l4.s8.offset-s2.m6.offset-m3
            h5.white-text What do we offer?
            ul
              li ✔ a way to share your thoughts, opinions, anything
            ul
              li ✔ unlimited post count
            ul
              li ✔ discussions in comment sections