body
    display flex
    min-height 100vh
    flex-direction column

#ultramain
    flex 1 0 auto
    display flex
    flex-direction column
    background #fafafa

::selection
    background #484848
    color #80d8ff

.flashes--container
    position fixed
    right 20px
    top 70px
    max-width 400px
    display flex
    flex-direction column
    align-items flex-end
    z-index 999
    pointer-events none

span
    &.flash--remover
        color #dd2c00
        cursor pointer
        margin-left 10px
        display inline-block
        font-style oblique
        pointer-events initial

.flash
    padding-right 16px
    line-height 16px
    position relative
    padding 10px 15px
    color white
    display inline-block
    border-radius 2px
    background #484848
    box-shadow rgba(30, 30, 30, 0.4) 0 2px 2px

#landingBg
    background #fff url("/imgs/pexels-photo-261662.jpeg") no-repeat center
    background-size cover
    display flex
    flex 1 0 auto
    min-height 500px
    justify-content center
    align-items center
    position relative
    &:after
        content ''
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background rgba(30, 30, 30, 0.4)

.landingBg-buttonsContainer
    a
        width 330px
        display block

nav
    position relative
    z-index 50

.nav-link_uncolappsable
    &.active
        border-bottom 3px #fb8c00 solid
        background #1e88e5

.nav-link_colappsable
    &.active
        background #1e88e5
        color #fff
        &:hover
            background #1e88e5
            color #fff

#sidenav-overlay
    margin-left 300px

.form--container
    margin-top 100px
    margin-bottom 100px

form
    margin 0 auto
    width 100%

.input-field
    label
        color #424242 !important

.input-field input[type=text].invalid + label,
  .input-field input[type=password].invalid + label,
  .input-field input[type=email].invalid + label
    color #dd2c00 !important

.input-field input[type=text]:focus,
  .input-field input[type=password]:focus,
  .input-field input[type=email]:focus
    border-bottom 1px solid #424242 !important
    box-shadow 0 1px 0 0 #424242 !important

.input-field input[type=text].valid,
  .input-field input[type=password].valid,
  .input-field input[type=email].valid
    border-bottom 1px solid #424242 !important
    box-shadow 0 1px 0 0 #424242 !important

.input-field input[type=text].invalid,
  .input-field input[type=password].invalid,
  .input-field input[type=email].invalid
    border-bottom 1px solid #dd2c00 !important
    box-shadow 0 1px 0 0 #dd2c00 !important

input[type='submit']
    background #fff
    border #424242 1px solid
    color #424242

input[type='submit']:hover,
  input[type='submit']:active,
  input[type='submit']:focus
    background #424242
    color #fff

[type="radio"]+label:before,
    [type="radio"]+label:after
    border 2px solid black !important
    color #fff

[type="radio"]
    & + label
        &:after
            background-color #424242 !important