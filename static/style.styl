@require('stylus/forms')

body
    display flex
    min-height 100vh
    flex-direction column

#ultramain
    flex 1 0 auto
    display flex
    flex-direction column
    background #fafafa

::selection
    background #484848
    color #80d8ff

.flashes--container
    position fixed
    right 20px
    top 70px
    max-width 400px
    display flex
    flex-direction column
    align-items flex-end
    z-index 999
    pointer-events none

span
    &.flash--remover
        color #dd2c00
        cursor pointer
        margin-left 10px
        display inline-block
        font-style oblique
        pointer-events initial

.flash
    padding-right 16px
    line-height 16px
    position relative
    padding 10px 15px
    color white
    display inline-block
    border-radius 2px
    background #484848
    box-shadow rgba(30, 30, 30, 0.4) 0 2px 2px

#landingBg
    background #fff url("/imgs/pexels-photo-261662.jpeg") no-repeat center
    background-size cover
    display flex
    flex 1 0 auto
    min-height 500px
    justify-content center
    align-items center
    position relative
    &:after
        content ''
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background rgba(30, 30, 30, 0.4)

.landingBg-buttonsContainer
    a
        width 330px
        display block

nav
    position relative
    z-index 50

.nav-link_uncolappsable
    &.active
        border-bottom 3px #fb8c00 solid
        background #1e88e5

.nav-link_colappsable
    &.active
        background #1e88e5
        color #fff
        &:hover
            background #1e88e5
            color #fff

#sidenav-overlay
    margin-left 300px

